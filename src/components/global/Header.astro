---
import { cva } from 'class-variance-authority';
import MobileMenu from '@components/global/MobileMenu.astro';

const {
  siteTitle = 'Site Title',
  logoIcon = 'logo',
  style = 'light',
} = Astro.props;

const header = cva('p-2 md:p-4 dark:bg-base-950 relative', {
  variants: {
    style: {
      light: ['border-b border-b-base-100 bg-light'],
      dark: ['bg-base-900 text-light'],
      small: ['w-2/3'],
    },
  },
});
---

<header id="main-nav" class={header({ style })}>
  <MobileMenu siteTitle={siteTitle} logoIcon={logoIcon} />
</header>
