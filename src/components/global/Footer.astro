---
import { Icon } from 'astro-icon/components';

const { socialLinks = [] } = Astro.props;
---

<footer
  class="flex flex-col gap-6 text-light justify-center items-center p-6 bg-base-900 dark:bg-base-950 mt-auto"
>
  {
    socialLinks && (
      <div>
        <span class="sr-only">Follow us</span>
        <ul class="flex gap-6 items-center">
          {socialLinks.map(
            (link: { url: string; icon: string; title: string }) => (
              <li>
                <a
                  title={link.title}
                  class="flex items-center hover:scale-110 focus-visible:scale-110 duration-200 transition-transform gap-1"
                  href={link.url}
                >
                  <Icon name={link.icon} class="w-5 h-5" />
                  <span class="sr-only">{link.title}</span>
                </a>
              </li>
            )
          )}
        </ul>
      </div>
    )
  }
