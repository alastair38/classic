---
import PageHeader from '@components/parts/PageHeader.astro';
const { frontmatter } = Astro.props;
---

<div
  class="flex flex-col px-3 md:flex-row w-full md:w-3/4 gap-6 md:gap-12 mx-auto justify-between"
>
  <PageHeader
    title={frontmatter.title}
    description={frontmatter.description}
    style="pattern"
  />
  <div
    class="prose dark:prose-invert prose-sm md:prose-base prose-h2:text-lg md:prose-h2:text-2xl prose-ol:list-roman mx-auto max-w-[75ch]"
  >
    <slot />
  </div>
</div>
